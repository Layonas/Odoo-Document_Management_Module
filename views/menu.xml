<odoo>
  <record model="ir.actions.act_window" id="action_document_tree">
    <field name="name">Documents</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">document_management.document</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_content_smiling_face">
        Create your first document!
      </p>
    </field>
    <field name="view_id" ref="document_tree_view"/>
  </record>

  <menuitem id="menu_documents" 
            name="Documents"
            action="action_document_tree"
            sequence="0"/>
</odoo>